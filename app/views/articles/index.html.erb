<div class="text-center mt-10">
  <div class="inline-flex flex-col space-y-4 justify-end p-4 bg-white shadow rounded-lg mx-auto">
    <div class="inline-flex justify-start py-0.5">
      <p class="text-xl font-semibold leading-7 text-left">#Articles list</p>
    </div>
    <div class="container flex mx-auto w-auto items-center justify-center">
      <ul class="flex flex-col p-4 md:w-screen sm:w-128">
        <% @articles.each do |article| %>
          <%= link_to "#" do %>
            <li class="flex flex-row mb-2 border">
              <div class="select-none cursor-pointer rounded-md flex flex-1 items-center p-4 transition duration-500 ease-in-out transform hover:-translate-y-1 hover:shadow-lg">
                <div class="flex flex-col rounded-md w-10 h-10 justify-center mr-4">
                  <%= image_tag 'unicorn.svg', class: "text-pink-600" %>
                </div>
                <div class="flex-1 pl-1 mr-16 text-left">
                  <div class="font-medium"><%= article.title %></div>
                  <div class="text-gray-600 text-sm"><%= short_description_content(article.content) %></div>
                </div>
                <div class="text-gray-600 text-xs">6:00 AM</div>
              </div>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</div>
